<header>
	<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
		<div class="container-fluid">
			<a class="navbar-brand" href="{{ path('home') }}">projectOne
			</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarScroll">
				<ul class="navbar-nav me-auto mb-2 mb-lg-0">
					<li class="nav-item">
						<a class="nav-link" aria-current="page" href="{{ path('home') }}">Home</a>
					</li>
				</ul>
				{% if app.user %}
					{% if is_granted('ROLE_ADMIN') %}
						<div class="navbar-btn me-4">
							<a href="{{ path('admin') }}" class="btn btn-secondary">Admin</a>
						</div>
					{% endif %}
						<div class="navbar-btn">
							<a href="{{ path('logout') }}" class="btn btn-secondary">logout</a>
						</div>
					{% else %}
						<div class="ml-left">
							<a href="{{ path('login') }}" class="btn btn-secondary">log in</a>
						</div>
				{% endif %}
			</div>
		</div>
	</nav>
</header>
