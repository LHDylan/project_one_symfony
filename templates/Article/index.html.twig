{% extends "base.html.twig" %}

{% block title %}
    Article |
    {{ parent() }}
{% endblock %}

{% block body %}

    <section class="container-fluid mt-4 js-filter">
        <div class="row">
            <div class="col-md-3">
                {% include "Components/Article/_filter.html.twig" %}
            </div>
            <div class="col-md-9">
                <div class="d-flex justify-content-between mb-2">
                    {% include "Components/Article/_count.html.twig" %}
                    <div class="d-flex justify-content-end gap-2 js-filter-sorting">
                        {% include "Components/Article/_sorting.html.twig" %}
                    </div>
                </div>

                {% include "Components/Article/_articles.html.twig" with {articles: articles} only %}

                {% include "Components/Article/_pagination.html.twig" %}
            </div>
        </div>
    </section>
{% endblock %}